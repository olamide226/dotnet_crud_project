{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "<your connection string>",
    "AzureBlobStorage": "<your azure blob connection string>"
  },
  "AzureBlobStorage": {
    "ContainerName": "complaints"
  },
  "JWT": {
    "Secret": "your_jwt_secret_key_here_which_is_very_secure_and_long_enough",
    "Issuer": "your_issuer",
    "Audience": "your_audience",
    "ExpirationInMinutes": 60
  },
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  }
}